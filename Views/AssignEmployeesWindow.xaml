<Window x:Class="MES.Views.AssignEmployeesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Assign Employees to Order" Height="400" Width="500"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Select Active Employees" FontWeight="Bold" FontSize="16"/>

        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ListBox x:Name="EmployeesListBox" SelectionMode="Multiple" DisplayMemberPath="FullName" SelectedValuePath="EmployeeId"/>

            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,0">
                <Label Content="Role:" VerticalAlignment="Center"/>
                <TextBox x:Name="RoleTextBox" Width="200" Margin="10,0,0,0" Text="Worker"/>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="OK" Width="100" Margin="0,0,10,0" Click="Ok_Click"/>
            <Button Content="Cancel" Width="100" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
