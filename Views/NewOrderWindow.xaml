<Window x:Class="MES.Views.NewOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Order" Height="450" Width="600"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Create New Order" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1">
            <!-- Product Selection -->
            <GroupBox Header="Product Information">
                <StackPanel Margin="10">
                    <Label Content="Select Product:"/>
                    <ComboBox x:Name="ProductComboBox" 
                             DisplayMemberPath="ProductName"
                             SelectedValuePath="ProductId"
                             Margin="0,5,0,10"/>

                    <Label Content="Select Machine:"/>
                    <ComboBox x:Name="MachineComboBox" 
                             DisplayMemberPath="MachineName"
                             SelectedValuePath="MachineId"
                             Margin="0,5,0,10"/>
                    
                    <Label Content="Quantity:"/>
                    <TextBox x:Name="QuantityTextBox" 
                            PreviewTextInput="NumberValidationTextBox"/>
                    
                    <Label Content="Order Date:"/>
                    <DatePicker x:Name="OrderDatePicker" 
                              SelectedDate="{Binding Path=DateTime.Now}"/>
                </StackPanel>
            </GroupBox>

            <!-- Employee Assignment -->
            <GroupBox Header="Assign Employees">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Content="Select Active Employees:"/>
                    <ListBox Grid.Row="1" x:Name="EmployeesListBox" SelectionMode="Multiple" DisplayMemberPath="FullName" SelectedValuePath="EmployeeId" Height="120"/>
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
                        <Label Content="Role:" VerticalAlignment="Center"/>
                        <TextBox x:Name="RoleTextBox" Width="200" Margin="10,0,0,0" Text="Worker"/>
                    </StackPanel>
                </Grid>
            </GroupBox>
		</StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="Cancel" 
                    Width="100" 
                    Height="35"
                    Margin="0,0,10,0"
                    Click="CancelButton_Click"/>
            <Button Content="Save" 
                    Width="100" 
                    Height="35"
                    Background="#27ae60"
                    Foreground="White"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
